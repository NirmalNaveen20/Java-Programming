
//Employee class

public class Employee {
	int Empno;
	String name;
	String telephone;
	double basicsalary;
	double othrs;
	double otrate;
	
	public Employee(int Empno, String name, String telephone, double basicsalary) {
		this.Empno = Empno;
		this.name = name;
		this.telephone = telephone;
		this.basicsalary = basicsalary;
	}
	
	public void empOtherSalary(double othrs, double otrate) {
		this.othrs = othrs;
		this.otrate = otrate;
	}
	
	double calcNetSalary() {
		double netSalary;
		netSalary = this.basicsalary + this.othrs * this.otrate;
		return netSalary;
	}
	
	public void printEmployee() {
	      System.out.println("Employee no: "+ Empno );
	      System.out.println("Employee name: " + name );
	      System.out.println("Telephone: " + telephone );
	      System.out.println("Basic Salary: " + basicsalary);
	      System.out.println("Others: " + othrs);
	      System.out.println("OT rate: " + otrate);
	      System.out.println("NET SALARY: " + calcNetSalary() + "\n");
	   }
	
}

//Manager class


public class Manager extends Employee{
	double allowances;
	double deductions;
	
	public Manager(int Empno, String name, String telephone, double basicsalary) {		
		super(Empno,name,telephone,basicsalary);
	}
	
	public void MgrOtherSalary(double allowances, double deductions) {
		this.allowances = allowances;
		this.deductions = deductions;
	}
	
	double calcNetSalary() {
		double netSalary;
		netSalary = this.basicsalary + this.allowances - deductions;
		return netSalary;
	}
	
	public void printManager() {
	      System.out.println("Employee no: "+ Empno );
	      System.out.println("Employee name: " + name );
	      System.out.println("Telephone: " + telephone );
	      System.out.println("Basic Salary: " + basicsalary);
	      System.out.println("Allowances: " + allowances);
	      System.out.println("Deductions: " + deductions);
	      System.out.println("NET SALARY: " + calcNetSalary() + "\n");
	   }
}

//Director class


public class Director extends Manager{
	double allowances;
	double deductions;
	double bonus;
	double entertainmentAllowance;
	
	public Director(int Empno, String name, String telephone, double basicsalary) {
		super(Empno,name,telephone,basicsalary);
		
	}
	public void dtOtherSalary(double allowances, double bonus, double deductions, double entertainmentAllowance) {
		this.allowances = allowances;
		this.bonus = bonus;
		this.deductions = deductions;
		this.entertainmentAllowance = entertainmentAllowance;
	}
	double calcNetSalary() {
		double netSalary;
		netSalary = basicsalary + allowances - deductions + bonus + entertainmentAllowance;
		return netSalary;
	}
	
	public void printDirector() {
	      System.out.println("Employee no: "+ Empno );
	      System.out.println("Employee name: " + name );
	      System.out.println("Telephone: " + telephone );
	      System.out.println("Basic Salary: " + basicsalary);
	      System.out.println("Allowances: " + allowances);
	      System.out.println("Deductions: " + deductions);
	      System.out.println("Bonus: " + bonus);
	      System.out.println("Entertainment Allowance: " + entertainmentAllowance);
	      System.out.println("NET SALARY: " + calcNetSalary() + "\n");
	   }
	
}

//Main class


public class Main {
	public static void main(String[] args) {
		
		Employee empone = new Employee(1001,"Janith", "071-4552565", 85000.00);
		empone.empOtherSalary(4500, 2.3);
		empone.printEmployee();
		
		Employee emptwo = new Employee(1002, "Nuwan", "078-6552345", 75500.00);
		emptwo.empOtherSalary(3500, 2.3);
		emptwo.printEmployee();
		
		Manager mngone = new Manager(2001,"Kamal", "076-4652865", 98000.00);
		mngone.MgrOtherSalary(12000.25, 1500);
		mngone.printManager();
		
		Manager mngtwo = new Manager(2002,"Shashini", "078-9352565", 98000.00);
		mngtwo.MgrOtherSalary(15000.25, 1750);
		mngtwo.printManager();
		
		Director dtone = new Director(3001, "Bandula", "077-4526598", 105000.50);
		dtone.dtOtherSalary(4500.00, 10000.65, 2500.75, 450);
		dtone.printDirector();
		
		Director dttwo = new Director(3002, "Chathurika", "077-3216598", 107500.50);
		dttwo.dtOtherSalary(4500.00, 11000.65, 2750.75, 500);
		dttwo.printDirector();
	}
}
